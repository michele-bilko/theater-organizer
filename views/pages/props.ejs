<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'), {variant: 'compact'}; %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
    <h1 class= "display-4">Props</h1>
    <hr class="my-4">

      <!-- <ul>
        <% rows.forEach(function(row) { %>
